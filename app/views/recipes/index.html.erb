<div class="block rounded-lg shadow-lg bg-glass px-6 py-12 md:px-12">
  <div class="actions text-center mb-6">
    <h1>Here is the list of recipes for the user:</h1>
    <span><%= @user.name %></span>
  </div>
  <% @recipes.each do |recipe| %>
    <div class="actions text-center flex flex-column gap-6 mb-6 border-2 border-black">
      <div>
        <%= link_to  recipe.name, user_recipe_path(@user, recipe), class: "mb-6"  %>
        <%=button_to 'Delete recipe', user_recipe_path(@user, recipe), :method => :delete, data: { confirm: 'Are you sure?' }, class: "border-2 border-black rounded-r" %>
      </div>
      <div>
        <%= recipe.description %>
      </div>
    </div>
  <% end %>
</div>
<div class="flex justify-center items-center">
  <div class="mb-12 lg:mb-0 relative">
    <div class="block rounded-lg shadow-lg bg-glass px-6 py-6 md:px-6">
      <div class="actions text-center">
        <%= link_to  "Create new Recipe", new_user_recipe_path(@user)  %>  </div>
    </div>
  </div>
</div>
