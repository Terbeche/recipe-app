<section class="w-full h-screen background-radial-gradient overflow-hidden">
  <style>
    .background-radial-gradient {
      background-color: hsl(218, 41%, 15%);
      background-image: radial-gradient(
        650px circle at 0% 0%,
        hsl(218, 41%, 35%) 15%,
        hsl(218, 41%, 30%) 35%,
        hsl(218, 41%, 20%) 75%,
        hsl(218, 41%, 19%) 80%,
        transparent 100%
      ),
      radial-gradient(
        1250px circle at 100% 100%,
        hsl(218, 41%, 45%) 15%,
        hsl(218, 41%, 30%) 35%,
        hsl(218, 41%, 20%) 75%,
        hsl(218, 41%, 19%) 80%,
        transparent 100%
      );
    }
    #radius-shape-1 {
      height: 220px;
      width: 220px;
      top: -60px;
      left: -130px;
      background: radial-gradient(#00216b, #1fff8a);
      overflow: hidden;
    }
    #radius-shape-2 {
      border-radius: 38% 62% 63% 37% / 70% 33% 67% 30%;
      bottom: -60px;
      right: -110px;
      width: 300px;
      height: 300px;
      background: radial-gradient(#00216b, #1fff8a);
      overflow: hidden;
    }
    .bg-glass {
      background-color: hsla(0, 0%, 100%, 0.9);
      backdrop-filter: saturate(300%) blur(25px);
    }
  </style>
  <div class="px-6 py-12 lg:py-24 md:px-12 mt-12 text-center lg:text-left">
    <div class="container mx-auto xl:px-32 text-gray-800">
      <div class="flex justify-center items-center">
        <div class="mb-12 lg:mb-0 relative">
          <div id="radius-shape-1" class="absolute rounded-full shadow-lg"></div>
          <div id="radius-shape-2" class="absolute shadow-lg"></div>
          <div class="block rounded-lg shadow-lg bg-glass px-6 py-12 md:px-12">
  
          <h1  class="actions text-center mb-6">New Recipe:</h1>
          <%= form_with model: @recipe, url: user_recipes_path, method: :post,  local: true, scope: :recipe  do |f| %>
            <%= f.text_field :name, autofocus: true, class: "form-control block w-full px-3 py-1.5 mb-6 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none", placeholder: "Name" %>
            <%= f.text_field :description, autofocus: true, class: "form-control block w-full px-3 py-1.5 mb-6 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none", placeholder: "Description" %>
         
            <%= f.radio_button :public, true, :value => true, class: "form-control  px-3 py-3 mb-6 text-base font-normal text-gray-700 bg-white bg-clip-padding  transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"%>
            <%= label :public, "True", value: true, class: "form-control  px-3 py-1 mb-6  text-gray-700 transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"  %>
            <%= f.radio_button :public, false, :checked => true, :value => false, class: "form-control  px-3 py-3 mb-6 text-base font-normal text-gray-700 bg-white bg-clip-padding  transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" %>
            <%= label :public, "False", value: false, class: "form-control  px-3 py-1 mb-6  text-gray-700 transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"  %>
            
            <div class="actions">
              <%= f.submit "Create Recipe", class: "inline-block px-6 py-2.5 mb-6 w-full bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out" %>
            </div>

          <% end %>
                   </div>
        </div>
      </div>
    </div>
  </div>


  </div>
  </div>
  </div>
</section>